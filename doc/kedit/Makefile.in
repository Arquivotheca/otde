prefix = @prefix@

FILES = index.html index-1.html index-2.html index-3.html index-4.html index-5.html

DOCDIR = $(prefix)/share/doc/HTML/en/kedit
INSTALL_DIR = @INSTALL@ -d -m 0755
INSTALL_DATA = @INSTALL@ -m 644

all:

Makefile: Makefile.in
	cd ../.. && CONFIG_FILES=kedit/docs/$@ CONFIG_HEADERS= $(SHELL) ./config.status

install:
	$(INSTALL_DIR) $(DOCDIR)
	@for i in $(FILES); do \
	 echo "$(INSTALL_DATA) $$i $(DOCDIR)"; \
	 $(INSTALL_DATA) "$$i" $(DOCDIR); \
	done

uninstall:
	for i in $(FILES); do \
	 rm -f $(DOCDIR)/"$$i"; \
	done


