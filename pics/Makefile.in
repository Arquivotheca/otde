INSTALL_DATA = @INSTALL@ -m 0644
INSTALL_DIR = @INSTALL@ -d -m 0755
PICS = `find . -type f \( -name "*.xpm" -o -name "*.jpg" -o -name "*.xbm" -o -name "*.ppm" -o -name "*.gif" \) -print`
prefix = @prefix@
libdir = $(prefix)/lib

Makefile: Makefile.in
	cd .. && CONFIG_FILES=pics/$@ CONFIG_HEADERS= $(SHELL) ./config.status

all:

clean:

install:
	$(INSTALL_DIR) $(libdir)/pics/toolbar
	$(INSTALL_DIR) $(libdir)/pics/wallpapers
	@for i in $(PICS); do \
	 echo "$(INSTALL_DATA) $$i $(libdir)/pics/$$i"; \
	 $(INSTALL_DATA) "$$i" $(libdir)/pics/$$i; \
	done

uninstall:
	for i in $(PICS); do \
	 rm -f $(libdir)/pics/"$$i"; \
	done
