#!/bin/sh

set -e

case "$1" in
        upgrade) 
	if test -n "`pidof kdm`"
	then
	echo "About to upgrade the kdebase package. To do this, kdm really"
	echo "should be stopped. When they are stopped, all X sessions "
        echo "managed by kdm will be terminated.  "
	echo ""
	echo "We are not going to stop it now but you really should"
	echo "restart it after the upgrade"
	fi
	;;
esac   
