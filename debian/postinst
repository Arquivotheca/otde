#!/bin/sh

set -e

echo -n "Verifying that KDE is in the window-managers list: ";
if [ -x /usr/sbin/register-window-manager ]; then
  /usr/sbin/register-window-manager --add /usr/bin/kde
fi
echo "Done!";

if test -L /var/spool/kdeapplnk; then
  rm -f /var/spool/kdeapplnk
fi

echo -n "Verifying /usr/share/wallpapers dir: ";
if test /usr/share/wallpapers; then
  echo "Exists!";
else
  mkdir /usr/share/wallpapers > /dev/null 2>&1
  echo "Created!";
fi

## Install the linux fonts for konsole

echo -n "Updating fonts: ";
/usr/bin/X11/mkfontdir /usr/X11R6/lib/X11/fonts/misc > /dev/null 2>&1
echo "done!";

#DEBHELPER#
#KDEHELPER#
