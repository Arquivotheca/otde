#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

BUILDDIR = ../build_kdebase

build: $(BUILDDIR)/build-stamp

$(BUILDDIR)/build-stamp:
	dh_testdir
	if test ! -f configure; then \
	  $(MAKE) -f admin/Makefile.common ;\
	fi 
	pwd=`pwd` ;\
	test -d $(BUILDDIR) || mkdir $(BUILDDIR) ;\
	cd $(BUILDDIR) ;\
	CFLAGS="-O2 -g -Wall -Wno-uninitialized -DUTMP_SUPPORT \
	  -DUTMP='\"/var/run/utmp\"'" \
	  CXXFLAGS="-O2 -g -Wall -Wno-uninitialized" \
	  RUN_KAPPFINDER="no" \
	$$pwd/configure --with-shadow --without-pam \
	--enable-debug --with-install-root=`pwd`/debian/tmp \
	--disable-rpath && make

	touch $(BUILDDIR)/build-stamp

clean: debian-clean
	-rm -rf $(BUILDDIR)

debian-clean:
	dh_testdir
	-rm -f $(BUILDDIR)/build-stamp

binary-indep:	checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch:	checkroot build
	dh_testdir
	dh_testroot
	dh_clean -k
	rm -rf $(BUILDDIR)/debian
	cp -ra debian $(BUILDDIR)/debian
	(cd $(BUILDDIR) && $(MAKE) -f debian/rules binary-arch2)

binary-arch2:
	dh_installdirs
	make prefix=`pwd`/debian/tmp/usr RUN_KAPPFINDER="no" install
	dh_movefiles
	perl -w debian/kderules
	cp debian/README.kde debian/tmp/usr/doc/kde
	install -d debian/tmp/etc/init.d
	cp debian/kdm.init.d debian/tmp/etc/init.d/kdm
	install -d debian/tmp/usr/X11R6/bin
	mv debian/tmp/usr/X11R6/bin/startkde debian/tmp/usr/X11R6/bin/kde
	ln -s debian/tmp/usr/X11R6/bin/kde debian/tmp/usr/X11R6/bin/startkde
	install -d debian/tmp/usr/sbin
	cp debian/switchdm debian/tmp/usr/sbin
	install -d debian/tmp/etc/X11
	rm -rf debian/tmp/usr/share/applnk/debian_menu
	install -d debian/tmp/usr/share/applnk/debian_menu
	cp debian/debian.kdelnk \
	      debian/tmp/usr/share/applnk/debian_menu/.directory
	chmod +x debian/tmp/etc/init.d/kdm debian/tmp/usr/sbin/switchdm 
	dh_undocumented `cat debian/man-pages`
	dh_installdocs
	dh_installmenu
	dh_installchangelogs
	dh_strip
	dh_compress
	dh_fixperms
	chown root.shadow debian/tmp/usr/X11R6/bin/kcheckpass
	chmod 2755 debian/tmp/usr/X11R6/bin/kcheckpass
	chmod 4755 debian/tmp/usr/X11R6/bin/kvt
	chmod 4755 debian/tmp/usr/X11R6/bin/konsole
	dh_suidregister
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol	
	dh_md5sums
	perl -w debian/kderules update
	dh_builddeb
	$(MAKE) -f debian/rules debian-clean

# Below here is fairly generic really

binary:		binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean checkroot
