prefix = @prefix@

INSTALL_DATA = @INSTALL@ -m 0644
INSTALL_DIR = @INSTALL@ -d -m 0755
PICS = OpenBook.xpm filedel.xpm
ICONDIR= $(prefix)/share/icons
DESTDIR = $(prefix)/share/apps/kjots/toolbar

all:
 
Makefile: Makefile.in
	cd ../.. && CONFIG_FILES=kjots/icons/$@ CONFIG_HEADERS= $(SHELL) ./config.status
clean:
 
install:
	$(INSTALL_DIR) $(DESTDIR)
	@for i in $(PICS); do \
	echo "$(INSTALL_DATA) $$i $(DESTDIR)/$$i"; \
	$(INSTALL_DATA) "$$i" $(DESTDIR)/$$i; \
	done
	$(INSTALL_DIR) $(ICONDIR)
	$(INSTALL_DATA) kjots.xpm $(ICONDIR)/kjots.xpm
 
uninstall:
	for i in $(PICS); do \
	rm -f $(DESTDIR)/"$$i" ; \
	done

