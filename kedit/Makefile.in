CXXFLAGS= @CXXFLAGS@ @all_includes@ -DHAVE_CONFIG_H -I..
LDFLAGS	= @LDFLAGS@ @all_libraries@ -lkfm -lkdecore -lkdeui -lqt -lXext -lX11 @LIBSOCKET@
CXX     = @CXX@
MOC   	= @MOC@

############# INSTALL #################

INSTALL = @INSTALL@ -m 0755
INSTALL_DATA = @INSTALL@ -m 0644
INSTALL_DIR = @INSTALL@ -d -m 0755

prefix = @prefix@
BINDIR = $(prefix)/bin
TOOLPICSDIR = $(prefix)/share/apps/kedit/toolbar
ICONDIR = $(prefix)/share/icons
PICSDIR = $(prefix)/share/apps/kedit/pics
DOCSDIR = $(prefix)/share/doc/HTML/kedit
APPSDIR = $(prefix)/share/applnk/Utilities

########### File Formats ###########

DEFS = #-DDOCS_PATH=\"$(DOCSDIR)/\"
.SUFFIXES: .cpp

.cpp.o:
	$(CXX) $(DEFS) -c $(CXXFLAGS) $<

%.moc: %.h
	$(MOC) $< -o $@

########## Files #####################

SOURCES =	kedit.cpp  KEdit.cpp  print.cpp\
		filldlg.cpp mail.cpp about.cpp
HEADERS =	kedit.h  KEdit.h  print.h\
		filldlg.h  version.h mail.h about.h
OBJECTS =	kedit.o  KEdit.o print.o\
		filldlg.o mail.o about.o
SRCMETA =	kedit.moc  KEdit.moc  print.moc\
		filldlg.moc mail.moc about.moc
TARGET	=	kedit


######### build rules ################

all: $(TARGET)

Makefile: Makefile.in
	cd .. && CONFIG_FILES=kedit/$@ CONFIG_HEADERS= $(SHELL) ./config.status

$(TARGET): $(SRCMETA) $(OBJECTS)
	$(CXX) $(OBJECTS) -o $(TARGET) $(LDFLAGS)

depend:
	@makedepend $(SOURCES) 2> /dev/null

showfiles:
	@echo $(SOURCES) $(HEADERS) Makefile

clean:
	rm -f *.o *.bak *~ *% #*
	rm -f $(SRCMETA) $(TARGET)

distclean: clean
	rm -f Makefile

install: all
	$(INSTALL_DIR) $(BINDIR)
	$(INSTALL) $(TARGET) $(BINDIR)
	(cd docs && $(MAKE) install)
	$(INSTALL_DIR) $(APPSDIR)
	$(INSTALL_DATA) kedit.kdelnk $(APPSDIR)/kedit.kdelnk 
	$(INSTALL_DIR) $(TOOLPICSDIR)
	$(INSTALL_DATA) pixmaps/filenew2.xpm $(TOOLPICSDIR)
	$(INSTALL_DATA) pixmaps/send.xpm $(TOOLPICSDIR)
	$(INSTALL_DIR) $(PICSDIR)
	$(INSTALL_DIR) $(ICONDIR)
	$(INSTALL_DATA) pixmaps/kedit.xpm  $(ICONDIR)
	$(INSTALL_DATA) pixmaps/keditlogo.xpm  $(PICSDIR)


uninstall:
	rm -f $(BINDIR)/$(TARGET)
	(cd docs && $(MAKE) uninstall)
	rm -f $(APPSDIR)/kedit.kdelnk
	rm -f $(ICONDIR)/kedit.xpm
	rm -f $(PICSDIR)/keditlogo.xpm
	rm -f $(TOOLPICSDIR)/filenew2.xpm
	rm -f $(TOOLPICSDIR)/send.xpm

messages:
	@XGETTEXT@ -C --keyword=translate -x ../../kdelibs/po/kde.po $(SOURCES)

