CXXFLAGS= @CXXFLAGS@ @all_includes@ -DHAVE_CONFIG_H -I..
LDFLAGS	= @LDFLAGS@ @all_libraries@ -lkfm -lkdecore -lkdeui -lqt -lXext -lX11 @LIBSOCKET@
CXX     = @CXX@
MOC   	= @MOC@

############# INSTALL #################

INSTALL = @INSTALL@ -m 0755
INSTALL_DATA = @INSTALL@ -m 0644
INSTALL_DIR = @INSTALL@ -d -m 0755
INSTALL_DIR_PRIVATE = @INSTALL@ -d -m 0700

prefix = @prefix@
KDEINC = $(prefix)/include
BINDIR = $(prefix)/bin
LIBDIR = $(prefix)/lib
TOOLPICSDIR = $(LIBDIR)/pics/toolbar
PICSDIR = $(LIBDIR)/pics
DOCSDIR = $(prefix)/doc/HTML/kedit
APPSDIR = $(prefix)/apps

########### File Formats ###########

DEFS = #-DDOCS_PATH=\"$(DOCSDIR)/\"
.SUFFIXES: .cpp

.cpp.o:
	$(CXX) $(DEFS) -c $(CXXFLAGS) $<

%.moc: %.h
	$(MOC) $< -o $@

########## Files #####################

SOURCES =	kedit.cpp  KEdit.cpp  print.cpp\
		filldlg.cpp mail.cpp about.cpp
HEADERS =	kedit.h  KEdit.h  print.h\
		filldlg.h  version.h mail.h about.h
OBJECTS =	kedit.o  KEdit.o print.o\
		filldlg.o mail.o about.o
SRCMETA =	kedit.moc  KEdit.moc  print.moc\
		filldlg.moc mail.moc about.moc
TARGET	=	kedit


######### build rules ################

all: $(TARGET)

Makefile: Makefile.in
	cd .. && CONFIG_FILES=kedit/$@ CONFIG_HEADERS= $(SHELL) ./config.status

$(TARGET): $(SRCMETA) $(OBJECTS)
	$(CXX) $(OBJECTS) -o $(TARGET) $(LDFLAGS)

depend:
	@makedepend $(SOURCES) 2> /dev/null

showfiles:
	@echo $(SOURCES) $(HEADERS) Makefile

clean:
	rm -f *.o *.bak *~ *% #*
	rm -f $(SRCMETA) $(TARGET)

distclean: clean
	rm -f Makefile

install: all
	$(INSTALL_DIR) $(BINDIR)
	$(INSTALL) $(TARGET) $(BINDIR)
	$(INSTALL_DIR) $(DOCSDIR)
	$(INSTALL_DATA) docs/k* $(DOCSDIR)
	$(INSTALL_DIR) $(APPSDIR)/Applications
	$(INSTALL_DATA) kedit.kdelnk $(APPSDIR)/Applications/kedit.kdelnk 
	$(INSTALL_DIR) $(TOOLPICSDIR)
	$(INSTALL_DATA) pixmaps/filenew2.xpm $(TOOLPICSDIR)
	$(INSTALL_DATA) pixmaps/send.xpm $(TOOLPICSDIR)
	$(INSTALL_DIR) $(PICSDIR)
	$(INSTALL_DATA) kedit.xpm  $(PICSDIR)
	$(INSTALL_DATA) keditlogo.xpm  $(PICSDIR)


uninstall:
	rm -f $(BINDIR)/$(TARGET)
	rm -f $(DOCSDIR)/kedit.html
	rm -f $(DOCSDIR)/kedit.gif
	rm -f $(APPSDIR)/Utilities/kedit.kdelnk

