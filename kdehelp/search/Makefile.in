#
# Makefile for help search.   Good Luck
#

CXX = @CXX@
MOC = @MOC@
INCFLAGS = -I. @all_includes@ -I.. -I../..
CXXFLAGS = -Wall
DEFS = -DHAVE_CONFIG_H
LDFLAGS = @all_libraries@ -lkdecore -lqt -lXext -lX11 @LIBSOCKET@ @LIBCOMPAT@ -lgif -ljpeg
.SUFFIXES: .cpp

########## Implicit Rules ##########

.cpp.o:
	$(CXX) $(CXXFLAGS) $(DEFS) $(INCFLAGS) -c $<

########## Files ##########

SRCS = search.cpp mansrch.cpp htmlsrch.cpp
SRCMETA =
HDRS = mansrch.h
OBJS = search.o mansrch.o htmlsrch.o

TARGET = helpsearch

########## Build Rules ##########

all: $(TARGET)

$(TARGET): $(SRCMETA) $(OBJS)
	$(CXX) -o $(TARGET) $(OBJS) $(LDFLAGS)

clean:
	rm -f *~ *.bak *.BAK $(TARGET) $(SRCMETA) $(OBJS) core

depend: $(SRCS)
	@makedepend $(INCFLAGS) $(SRCS) 2> /dev/null

########## Meta objects ##########

%.moc: %.h
	$(MOC) $< -o $@

