DESKTOPLNKS = "FTP URL.kdelnk" "Program.kdelnk" "WWW URL.kdelnk" "File Type.kdelnk" "URL.kdelnk"

top_srcdir = @top_srcdir@
DESTDIR = @prefix@/lib/kfm/Desktop/Templates
INSTALL_DIR = $(SHELL) $(top_srcdir)/mkinstalldirs
INSTALL_DATA = @INSTALL@ -m 644

all:

Makefile: Makefile.in
	cd ../.. && CONFIG_FILES=kfm/Desktop/$@ CONFIG_HEADERS= $(SHELL) ./config.status

install:
	$(INSTALL_DIR) $(DESTDIR)
	@for i in $(DESKTOPLNKS); do \
	 echo "$(INSTALL_DATA) $$i $(DESTDIR)"; \
	 $(INSTALL_DATA) "./Templates/$$i" $(DESTDIR)/"$$i"; \
	done

uninstall:
	for i in $(DESKTOPLNKS); do \
	 rm -f $(DESTDIR)/"$$i"; \
	done
