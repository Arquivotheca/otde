DESKTOPLNKS = "./Templates/FTP URL.kdelnk" \
	"./Templates/Program.kdelnk" \
	"./Templates/WWW URL.kdelnk" \
	"./Templates/File Type.kdelnk" \
	"./Templates/URL.kdelnk" \

TEMPLATEDIR = @prefix@/lib/kfm/Desktop/
INSTALL_DIR = @INSTALL@ -d -m 0755
INSTALL_DATA = @INSTALL@ -m 644

all:

install:
	$(INSTALL_DIR) $(TEMPLATEDIR)
	@for i in $(DESKTOPLNKS); do \
	 echo "$(INSTALL_DATA) $$i $(TEMPLATEDIR)"; \
	 $(INSTALL_DATA) "$$i" $(TEMPLATEDIR)/"$$i"; \
	done

uninstall:
	for i in $(DESKTOPLNKS); do \
	 rm -f $(TEMPLATEDIR)/"$$i"; \
	done
