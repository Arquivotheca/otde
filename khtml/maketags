#
#  KDE HTML Widget -- Script to generate khtmltags.c and khtmltags.h
#  $Id$
#
echo -e '%{\n/* This file is automatically generated from khtmltags.in by maketags, do not edit */\n/* Copyright 1998 W. Bastian */\n#include "khtmltags.h"\n%}\nstruct tags {\n    char *name;\n    int id;\n};\n%%' > khtmltags.gperf
cat khtmltags.in | awk '{ do { print $0 ", ID_" toupper($0) } while (getline) }' >> khtmltags.gperf 
echo '%%' >> khtmltags.gperf
echo -e '/* This file is automatically generated from khtmltags.in by maketags, do not edit */\n/* Copyright 1998 W. Bastian */\n' > khtmltags.h
cat khtmltags.in | awk '{ i=2; do { print "#define ID_" toupper($0) " " i; i = i + 2 } while (getline) ; print ""; print "#define ID_MAX " i-1; print "#define ID_CLOSE_TAG 1"; print "#define ID_NEWLINE " i; print "#define ID_ENTITY " i+1; }' >> khtmltags.h
gperf -L ANSI-C -C -G -c -o -t -k '*' -NfindTag -D khtmltags.gperf -s 2 > khtmltags.c
