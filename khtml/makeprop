#
#  KDE HTML Widget -- Script to generate kcssprop.c and kcssprop.h
#  $Id$
#
echo -e '%{\n/* This file is automatically generated from kcssprop.in by makeprop, do not edit */\n/* Copyright 1999 W. Bastian */\n#include "kcssprop.h"\n%}\nstruct props {\n    char *name;\n    int id;\n};\n%%' > kcssprop.gperf
cat kcssprop.in | awk '{ do { prop = $0; gsub("-", "_"); print prop ", CSS_PROP_" toupper($0) } while (getline) }' >> kcssprop.gperf 
echo '%%' >> kcssprop.gperf
echo -e '/* This file is automatically generated from kcssprop.in by makeprop, do not edit */\n/* Copyright 1998 W. Bastian */\n' > kcssprop.h
cat kcssprop.in | awk '{ \
i=1; \
print "#define CSS_PROP_INVALID 0"; \
print "#define CSS_PROP_MIN 1"; \
do { gsub("-", "_"); print "#define CSS_PROP_" toupper($0) " " i; i = i + 1 } while (getline); \
print ""; \
print "#define CSS_PROP_MAX CSS_PROP_LIST_STYLE_POSITION"; \
print "#define CSS_PROP_TOTAL " i \
}' >> kcssprop.h
gperf -L ANSI-C -C -G -c -o -t -k '*' -NfindProp -D kcssprop.gperf -s 2 > kcssprop.c
